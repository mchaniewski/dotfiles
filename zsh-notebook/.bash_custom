# Java
export JAVA_HOME=$HOME/apps/java
export PATH=$JAVA_HOME/bin:$PATH
export JAVA_OPTS="-Xdebug -Xrunjdwp:transport=dt_socket,address=8001,server=y,suspend=n -Xms512m -Xmx512m"

# Maven
export M2_HOME=$HOME/apps/maven
export M2=$M2_HOME/bin
export MAVEN_OPTS="-Xms256m -Xmx512m"
export PATH=$M2:$PATH

# Commons
# Set timestamp for history
export HISTTIMEFORMAT="%F %T "

# Rust
export LD_LIBRARY_PATH=/home/mariusz/workspace/rust/rust_bin/lib
export RUST_PATH=/home/mariusz/workspace/rust/rust_bin
export PATH=$RUST_PATH/bin:$PATH

# Sublime text 3
export SUBLIME_PATH=/home/mariusz/apps/sublime_text_3
export PATH=$SUBLIME_PATH:$PATH

# RBEnv
export RBENV_HOME=$HOME/.rbenv
export PATH=$RBENV_HOME/bin:$PATH
eval "$(rbenv init -)"

# Node.js
export NODEJS_HOME=$HOME/apps/node-v0.10.32-linux-x86
export PATH=$NODEJS_HOME/bin:$PATH

# Exercism
export EXERCISM_HOME=$HOME/apps/exercism
export PATH=$EXERCISM_HOME:$PATH

# Go lang
export GOROOT=$HOME/apps/go1.3.1
export PATH=$GOROOT/bin:$PATH
export GOPATH=$HOME/.golang/code
